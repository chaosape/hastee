<if(options.enableTrace)>
{
	int i;
	for (i = 0; i \< <numTokens>; i++) {
		fprintf(file_<port.name>, "%<printFormatType(port.type)>\n", tokens_<port.name>[(index_<port.name> + i) % SIZE_<port.name>]);
	}
