instance(instance, options) ::= <<
// Source file is "<instance.actor.file>"

#include \<stdio.h\>
#include \<stdlib.h\>

#include "orcc_types.h"
#include "orcc_fifo.h"
#include "orcc_util.h"
#include "orcc_scheduler.h"
<printMediumInclude(options.network.templateData.listAllMedium.(instance))>

#define SIZE <options.("fifoSize")>

<if(options.newScheduler)>
#define RING_TOPOLOGY <if(options.ringTopology)>1<else>0<endif>
<endif>

// #define PRINT_FIRINGS

////////////////////////////////////////////////////////////////////////////////
// Instance
extern struct actor_s <instance.id>;

////////////////////////////////////////////////////////////////////////////////
// Input FIFOs
<instance.actor.inputs: { port | extern struct fifo<printMedium(port)>_<port.type>_s *<getPortName(port)>;}; separator="\n">
<instance.actor.inputs: printInputPort()>
<if(options.enableTrace)>
<instance.actor.inputs: { port | FILE *file_<port.name>;}; separator="\n">
<endif>

////////////////////////////////////////////////////////////////////////////////
// Predecessors
<instance.actor.inputs: { port | extern struct actor_s <options.network.predecessorsMap.(instance).(port).id>;}; separator="\n">

////////////////////////////////////////////////////////////////////////////////
// Output FIFOs
<instance.actor.outputs: { port | extern struct fifo<printMedium(port)>_<port.type>_s *<getPortName(port)>;}; separator="\n">
<instance.actor.outputs: printOutputPort()>
<if(options.enableTrace)>
<instance.actor.outputs: { port | FILE *file_<port.name>;}; separator="\n">
<endif>

////////////////////////////////////////////////////////////////////////////////
// Successors
<instance.actor.outputs: { port | <options.network.successorsMap.(instance).(port): { successor | extern struct actor_s <successor.id>;}; separator="\n">}; separator="\n">

////////////////////////////////////////////////////////////////////////////////
// Input FIFOs Id
<instance.actor.inputs: { port | static unsigned int fifo_<getPortName(port)>_id; }; separator="\n"> 

////////////////////////////////////////////////////////////////////////////////
// Parameter values of the instance
<parameters(instance.parameters)>
////////////////////////////////////////////////////////////////////////////////
// State variables of the actor
<instance.actor.stateVars: stateVar()>
<if(instance.actor.fsm)>
////////////////////////////////////////////////////////////////////////////////
// Initial FSM state of the actor
<statesFSM(fsm=instance.actor.fsm)>
<endif>
////////////////////////////////////////////////////////////////////////////////
// Functions/procedures
<instance.actor.procs: printProcedure()>
////////////////////////////////////////////////////////////////////////////////
// Actions
<instance.actor.actions: printAction()>

////////////////////////////////////////////////////////////////////////////////
// Token functions
<printTokensFunctions()>

////////////////////////////////////////////////////////////////////////////////
// Initializes
<initializeFunction()>

////////////////////////////////////////////////////////////////////////////////
// Action scheduler
<if(instance.actor.fsm)>
<schedulerFSM(actions=instance.actor.actionsOutsideFsm, fsm=instance.actor.fsm)>
<else>
void <instance.id>_scheduler(struct schedinfo_s *si) {
	int i = 0;
	si-\>ports = 0;

	<printCallTokenFunctions()>
<if(options.enableTrace)>
	<printOpenFiles()>
<endif>

	<printActionLoop(instance.actor.actionsOutsideFsm)>

finished:
<if(options.enableTrace)>
	<printCloseFiles()>
<endif>
	<instance.actor.inputs: {port|read_end_<port.name>();}; separator="\n">
	<instance.actor.outputs: {port|write_end_<port.name>();}; separator="\n">
}
<endif>

>>
