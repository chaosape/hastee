// Action scheduler
///////////////////////////////////////////////////////////////////////////////

printOutputPatternPort(port, successor, readerId) ::= <<
if (<pattern.numTokensMap.(port)> \> SIZE_<port.name> - index_<port.name> + <getPortName(port)>-\>read_inds[<readerId>] ) {
	stop = 1;
	<if(options.newScheduler)>
	if(!<instance.id>.sched-\>round_robin || i \> 0) {
		sched_add_schedulable(<instance.id>.sched, &<successor.id>, RING_TOPOLOGY);
#ifdef PRINT_FIRINGS
		printf("\tFull port: <port.name>\n");
#endif
	}
	<endif>
}
>>

printOutputPatternsPort(port) ::= <<
<options.network.successorsMap.(instance).(port): { successor | <printOutputPatternPort(port, successor, i0)> }; separator="\n">
>>

printOutputPattern(pattern) ::= <<
int stop = 0;
<pattern.ports: printOutputPatternsPort(); separator="\n">
if (stop != 0) {
>>

checkInputPattern(pattern) ::= <<
<pattern.ports: { port | index_<port.name> + <pattern.numTokensMap.(port)> \<= numTokens_<port.name> && }>
>>

printReadTokensFunction(port) ::= <<


static void read_<port.name>() {
	index_<port.name> = <getPortName(port)>-\>read_inds[fifo_<getPortName(port)>_id];
	numTokens_<port.name> = index_<port.name> + fifo<printMedium(port)>_<port.type>_get_num_tokens(<getPortName(port)>, fifo_<getPortName(port)>_id);
}

static void read_end_<port.name>() {
	<getPortName(port)>-\>read_inds[fifo_<getPortName(port)>_id] = index_<port.name>;
}
>>

printWriteTokensFunction(port) ::= <<


static void write_<port.name>() {
	index_<port.name> = <getPortName(port)>-\>write_ind;
	numFree_<port.name> = index_<port.name> + fifo<printMedium(port)>_<port.type>_get_room(<getPortName(port)>, NUM_READERS_<port.name>);
}

static void write_end_<port.name>() {
	<getPortName(port)>-\>write_ind = index_<port.name>;
}
>>

printTokensFunctions() ::= <<
<instance.actor.inputs: printReadTokensFunction()>
<instance.actor.outputs: printWriteTokensFunction()>
>>

printCallTokenFunctions() ::= <<
<instance.actor.inputs: {port|read_<port.name>();
}>
<instance.actor.outputs: {port|write_<port.name>();
}>
>>

printOpenFiles() ::= <<
<instance.actor.inputs:
	{ port | file_<port.name> = fopen("<getPortName(port)>.txt", "a");
}><instance.actor.outputs:
	{ port | file_<port.name> = fopen("<getPortName(port)>.txt", "a");
}>
>>

printCloseFiles() ::= <<
<instance.actor.inputs:
	{ port | fclose(file_<port.name>);
}><instance.actor.outputs:
	{ port | fclose(file_<port.name>);
}>
>>

///////////////////////////////////////////////////////////////////////////////
// Scheduler without FSM

actionTest(action, restActions) ::= <<
if (<checkInputPattern(action.inputPattern)>isSchedulable_<action.name>()) {
	<if(action.outputPattern)>
	<printOutputPattern(pattern=action.outputPattern)>
		si-\>num_firings = i;
		si-\>reason = full;
		goto finished;
	}
	<endif>
	<action.body.name>();
	i++;
} else {
	<printActions(restActions)>
}
>>

printActions(actions) ::= <<
<if (first(actions))
><actionTest(action=first(actions), restActions=rest(actions))><
else
><printTransitionPattern(instance.actor.templateData.inputPattern)>
goto finished;<
endif>
>>

printActionLoop(actions) ::= <<
while (1) {
	<printActions(actions)>
}
>>

///////////////////////////////////////////////////////////////////////////////
// Scheduler with FSM

actionTestState(sourceState, transition, restTransitions) ::= <<
if (<checkInputPattern(transition.action.inputPattern)>isSchedulable_<transition.action.name>()) {
	<if (transition.action.outputPattern)>
	<printOutputPattern(transition.action.outputPattern)>
		_FSM_state = my_state_<sourceState.name>;
		si-\>num_firings = i;
		si-\>reason = full;
		goto finished;
	}
	<endif>
	<transition.action.body.name>();
	i++;
	goto l_<transition.state.name>;
} else {
	<schedulingStates(sourceState, restTransitions)>
}
>>

printInputPatternPort(port) ::= <<
if (index_<port.name> + <pattern.numTokensMap.(port)> \> numTokens_<port.name>) {
	if(!<instance.id>.sched-\>round_robin || i \> 0) {
		sched_add_schedulable(<instance.id>.sched, &<options.network.predecessorsMap.(instance).(port).id>, RING_TOPOLOGY);
#ifdef PRINT_FIRINGS
		printf("\tEmpty port: <port.name>\n");
#endif
	}
}
>>

printTransitionPattern(pattern) ::= <<
<if(options.newScheduler)>
<pattern.ports: printInputPatternPort(); separator="\n">
<endif>
si-\>num_firings = i;
si-\>reason = starved;
>>

schedulingStates(sourceState, transitionsList) ::= <<
<if (first(transitionsList))
><actionTestState(sourceState=sourceState, transition=first(transitionsList), restTransitions=rest(transitionsList))><
else
><printTransitionPattern(pattern=instance.actor.templateData.transitionPattern.(transitions))>
_FSM_state = my_state_<sourceState.name>;
goto finished;<
endif>
>>

printTransition(transitions) ::= <<


l_<transitions.sourceState.name>:
	<if (actions)>
	<instance.id>_outside_FSM_scheduler(si);
	i += si-\>num_firings;
	<endif>
	<if (transitions.list.empty)>
	printf("stuck in state \"<transitions.sourceState.name>\" in the instance <instance.id>\n");
	wait_for_key();
	exit(1);
	<else>
	<schedulingStates(transitions.sourceState, transitions.list)>
	<endif>
>>

switchTransition(transitions) ::= <<

case my_state_<transitions.sourceState.name>:
	goto l_<transitions.sourceState.name>;
>>

printSwitch(transitions) ::= <<
switch (_FSM_state) {
<transitions: switchTransition()>
default:
	printf("unknown state in <instance.id>.c : %s\n", stateNames[_FSM_state]);
	wait_for_key();
	exit(1);
}
>>

schedulerFSM(actions, fsm) ::= <<
<if(actions)>
void <instance.id>_outside_FSM_scheduler(struct schedinfo_s *si) {
	int i = 0;

	<printActionLoop(actions)>

finished:
	// no read_end/write_end here!
	return;
}
<endif>

void <instance.id>_scheduler(struct schedinfo_s *si) {
	int i = 0;

	<printCallTokenFunctions()>
<if(options.enableTrace)>
	<printOpenFiles()>
<endif>

	// jump to FSM state 
	<printSwitch(fsm.transitions)>

	// FSM transitions
<fsm.transitions: printTransition()>
finished:
<if(options.enableTrace)>
	<printCloseFiles()>
<endif>
	<instance.actor.inputs: {port|read_end_<port.name>();}; separator="\n">
	<instance.actor.outputs: {port|write_end_<port.name>();}; separator="\n">
}

>>

statesFSM(fsm) ::= <<
enum states {
	my_state_<first(fsm.states).name> = 0,
	<rest(fsm.states) : {state | my_state_<state.name>}; separator=",\n">
};

static char *stateNames[] = {
	<fsm.states : {state | "<state.name>"}; separator=",\n">
};

static enum states _FSM_state;
>>

parameters(parameters) ::= <<
